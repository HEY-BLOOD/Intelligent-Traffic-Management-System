<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderItemCellStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/light_header_cell_border</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LightItemCellStyle" parent="HeaderItemCellStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/light_item_cell_border</item>
    </style>
</resources>