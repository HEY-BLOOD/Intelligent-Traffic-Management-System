<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="36dp"
    android:paddingBottom="36dp">

    <TextView
        android:id="@+id/welcome_user"
        android:textColor="?attr/colorOnBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="湿度："
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:textColor="?attr/colorOnBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="PM2.5："
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/welcome_user"
        app:layout_constraintTop_toBottomOf="@+id/welcome_user" />

    <TextView
        android:id="@+id/hum"
        android:textColor="?attr/colorOnBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        tools:text="15"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/welcome_user"
        app:layout_constraintTop_toTopOf="@+id/welcome_user" />

    <TextView
        android:id="@+id/pm25"
        android:textColor="?attr/colorOnBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        tools:text="2349"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="30"
        android:textColor="@color/blue_700"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/temp_unit"
        app:layout_constraintEnd_toStartOf="@+id/temp_unit"
        app:layout_constraintTop_toTopOf="@+id/temp_unit" />

    <TextView
        android:id="@+id/temp_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:text="℃"
        android:textColor="@color/blue_700"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>